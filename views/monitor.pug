extends layout

block scripts
  script(src=BASEURL + '/dist/monitor.bundle.js')

block content
  main.container-fluid.d-flex.flex-column.text-white
    table.table.table-dark
      thead
        tr
          th(scope='col') Session ID
          th(scope='col') IPs
          th(scope='col') Connected
          th(scope='col')
      tbody
        each [key, value] of clients
          tr
            th(scope='row')=key
            th
              each object in value
                =object.ip + ","
            th=value.length
            th
              button.btn.btn-danger.terminate(type="submit" data-id=key) Terminate
